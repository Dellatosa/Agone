<div class="carte arme" data-item-id="{{_id}}" data-is-token="{{isToken}}" data-owner-id="{{owner}}">
    <div class="entete">
        <img src="{{img}}" title="{{name}}" height="32" width="32"/>
        <span>{{name}}</span>
    </div>
    <div class="grid-4">
        <label>{{localize "agone.items.modifInit"}}</label>
        <label>{{localize "agone.items.modifAttaque"}}</label>
        {{#if (eq system.style "melee")}}
            <label>{{localize "agone.items.modifParade"}}</label>
        {{else}}
            <label>{{localize "agone.items.portee"}}</label>
        {{/if}}
        <label>{{localize "agone.items.modifDommages"}}</label>
        <div>{{system.modifInit}}</div>
        <div>{{system.modifAttaque}}</div>
        {{#if (eq system.style "melee")}}
            <div>{{system.modifParade}}</div>
        {{else}}
            <div>{{system.portee}}</div>
        {{/if}}
        <div>{{system.modifDommages}}</div>
    </div>
    {{#if system.nonUtilisable}}
        <div class="fumble">{{localize "agone.chat.warnArmeNonUtilisableMsg"}}</div>
    {{else}}
        <div class="boutons-carte">
            {{#if (eq system.style "melee")}}
                <div class="ligne-btn-2">
                    <button class="attaque">{{localize "agone.chat.attaque"}}</button>
                    <button class="parade">{{localize "agone.chat.parade"}}</button>
                </div>
            {{else}}
                <button class="attaque">{{localize "agone.chat.attaque"}}</button>
            {{/if}}
        </div>
    {{/if}}
</div>