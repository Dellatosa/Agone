<div class="carte pouvoir" data-item-id="{{_id}}" data-owner-id="{{owner}}">
    <div class="titre">
        <img src="{{img}}" title="{{name}}" height="32" width="32"/>
        <div class="titre-nom">{{name}}</div>
        {{#if system.coutHeroisme}}
            <div class="cout-heroisme">
                <i class="fa-duotone fa-solid fa-fire-flame-curved"></i> <label>{{system.coutHeroisme}}</label>
            </div>                
        {{/if}}
    </div>
    {{#if system.description}}
        <div class="carte-desc">{{editor system.description target="system.description" owner=true}}</div>
    {{/if}}
    <div class="boutons-carte">
        <div class="ligne-btn-1">
            <button class="jet-pouvoir"><i class="{{configSymbole 'pouvoirFlamme'}}"></i> {{localize "agone.chat.utiliserCePouvoir"}}</button>
        </div>
    </div>
</div>