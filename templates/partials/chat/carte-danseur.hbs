<div class="carte danseur" data-item-id="{{_id}}" data-owner-id="{{owner}}">
    <div class="entete">
        <img src="{{img}}" title="{{name}}" height="32" width="32"/>
        <span>{{name}}</span>
    </div>
    <div class="grid-3">
        <label>{{localize "agone.items.bonusEmprise"}}</label>
        <label>{{localize "agone.items.empathie"}}</label>
        <label>{{localize "agone.items.endurance"}}</label>
        <div>{{system.bonusEmprise}}</div>
        <div>{{system.empathie}}</div>
        <div>{{system.endurance.value}} / {{system.endurance.max}}</div>
    </div>
    <div class="boutons-carte">
        {{#each system.sorts as | sort | }}
            <div class="ligne-btn-sort sort" data-sort-id="{{sort.id}}">
                <a class="editer-item-sort" title="{{localize "agone.common.details"}}"><i class="fas fa-book-open"></i></a>
                <button class="jet-sort">{{sort.name}} ({{sort.system.seuil}}{{#if sort.system.diffObedience}} + 5{{/if}})</button> <!-- <i class="fas fa-hand-sparkles"></i> -->
            </div>
        {{/each}}
        <button class="jet-sort-intuitif">Sort de magie intuitive</button>
    </div>
</div>