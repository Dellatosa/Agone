<form>
    {{#if oeuvreData.isArtImpro}}
        <div>{{localize "agone.chat.executerOeuvreArtImpro"}}</div>
        <div>{{localize "agone.actors.potArtImpro"}} <span class="bold">{{artisteData.potArtMagique}}</div>
        <div class="form-group">
            <label>{{ localize "agone.chat.seuilEstime"}}</label>
            <input type="number" name="seuilEstime" value="0" min="0"/>
        </div>
        <div class="txt-small">{{ localize "agone.chat.seuilEstimeMsg"}}</div>
        {{#if (eq oeuvreData.artMagique "accord")}}
            <div class="form-group">
                <label>{{localize "agone.items.instrument"}}</label>
                <select name="instrumentSel">
                    <!-- TODO : Corriger -> la localisation ne fonctionne pas -->
                    {{selectOptions oeuvreData.instruments selected=instrumentSel valueAttr="label" labelAttr="label" localize=true}}
                </select>
            </div>    
        {{/if}}    
    {{else}}
        <div>{{localize "agone.chat.executerOeuvre"}} <span class="bold">{{oeuvreData.nomOeuvre}}</span></span></div>
        <div>{{localize "agone.actors.potArtMagique"}} <span class="bold">{{artisteData.potArtMagique}}</span> - {{localize "agone.items.seuil"}} <span class="bold">{{oeuvreData.seuil}}</span></div>
    {{/if}}
    <div class="form-group">
        <label>{{ localize "agone.chat.magieInstantanee"}}</label>
        <input type="checkbox" name="magieInstantanee"/>
    </div> 
    {{#if (eq oeuvreData.artMagique "accord")}}
        <div class="form-group">
            <label>{{localize "agone.chat.qualiteInstrument"}}</label>
            <select name="qualiteInstrument">
                {{selectOptions cfgData.qualiteInstrument selected=qualiteInstrument valueAttr="modif" labelAttr="label" localize=true}}
            </select>
        </div>
    {{/if}}
    {{#if (eq oeuvreData.artMagique "geste")}}
        <div class="form-group">
            <label>{{localize "agone.chat.bruitEnviron"}}</label>
            <select name="bruitEnviron">
                {{selectOptions cfgData.bruitEnviron selected=bruitEnviron valueAttr="modif" labelAttr="label" localize=true}}
            </select>
        </div>
    {{/if}}
    {{#if (eq oeuvreData.artMagique "decorum")}}
        <div class="form-group">
            <label>{{localize "agone.chat.saisonOeuvre" saison=oeuvreData.saison}}</label>
            <select name="saisonOeuvre">
                {{selectOptions cfgData.saisonOeuvre selected=saisonOeuvre valueAttr="modif" labelAttr="label" localize=true}}
            </select>
        </div>
    {{/if}}
    {{#if (eq oeuvreData.artMagique "cyse")}}
        <div class="form-group">
            <label>{{localize "agone.chat.materiaux"}}</label>
            <select name="materiaux">
                {{selectOptions cfgData.materiaux selected=materiaux valueAttr="resistance" labelAttr="label" localize=true}}
            </select>
        </div>
    {{/if}}
    <div class="form-group">
        <label>{{localize "agone.chat.margeQualite"}}</label>
        <input type="number" name="margeQualite" value="0" min="0"/>
    </div>
    {{#if artisteData.specialisation}}
        <div class="form-group">
            <div>{{ localize "agone.actors.specialisation"}}  <span class="bold">{{artisteData.labelSpecialisation}}</span></div>
            <input type="checkbox" name="utiliseSpecialisation"/>
        </div>
    {{/if}}
    <div class="form-group">
        <label>{{ localize "agone.chat.utiliseHeroisme"}}</label>
        <input type="checkbox" name="utiliseHeroisme"/>
    </div>
</form>