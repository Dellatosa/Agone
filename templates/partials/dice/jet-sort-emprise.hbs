<div class="jet-sort">
    <div class="txt-small"><span class="bold">{{danseur.nomDanseur}}</span> lance le sort <span class="bold">{{sort.name}}</span> (difficulté <span class="bold">{{stats.difficulte}}</span>)</div>
    <div class="txt-small bold">Potentiel d'Emprise ({{mage.potEmprise}})
        {{#if stats.danseurInvisible}}<span> + danseur invisible (-2)</span>{{/if}}
        {{#if stats.mouvImperceptibles}}<span> + mouvements imperceptibles (-3)</span>{{/if}}
    </div>
    {{#if stats.specialisation}}
        <div class="txt-small">Spécialisation <span class="bold">{{stats.labelSpecialisation}}</span></div>
    {{/if}}
    {{#if stats.utiliseHeroisme}}
        <div class="txt-small bold">Utilisation d'un point d'Héroïsme</div>
    {{/if}}
    {{#if stats.isFumble}}
        <div class="dice-tooltip"><div class="dice-rolls fumble"><span class="fumble">FUMBLE !!!</span><div class="roll die d10 min">1</div></div></div>
    {{/if}}
    <div>{{{roll}}}</div>
    <div>{{roll.formula}}</div>
    {{#if stats.marge}}
        <h3 class="resultat">Marge de réussite {{#if stats.isEchecCritique}}<span class="fumble">{{stats.marge}}</span>{{else}}{{stats.marge}}{{/if}}</h3>
        {{#if (gte stats.marge 0)}}
            <h3 class="resultat">Succès !</h3>
        {{else}}
            {{#if stats.isEchecCritique}}
                <h3 class="resultat fumble">Echec Critique !!!</h3>
            {{else}}
                <h3 class="resultat">Echec !</h3>
            {{/if}}
        {{/if}}
    {{/if}}
</div>
