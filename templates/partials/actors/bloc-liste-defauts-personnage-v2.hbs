<div class="titre-rub">{{localize "agone.actors.defauts"}}</div>
<div class="grid-defauts">
    {{#each defauts as |defaut id|}}
        <div class="bloc-defaut item" data-item-id="{{defaut._id}}">
            <div class="ligne-titre">
                <a class="item-roll"><img src="{{img}}" title="{{localize 'agone.actors.voirDefaut'}}"/></a>
                <div class="titre">{{name}}</div>
                {{#if ../unlocked}}
                    <div class="icone"><a class="editer-item" title="{{localize 'agone.common.editer'}}"><i class="fa-duotone fa-solid fa-pen-to-square"></i></a></div>
                    <div class="icone"><a class="supprimer-item" title="{{localize 'agone.common.supprimer'}}"><i class="fa-duotone fa-solid fa-x"></i></a></div>
                {{else}}
                {{/if}}
            </div>
            <div class="ligne-stats-defaut">
                <div>
                    {{configLocalize "typesAvantageDefaut" system.type}}
                </div>
                <div>
                    {{localize 'agone.common.cout'}} {{system.cout}}
                </div>
            </div>
            <div class="ligne-stats-defaut ">
                <div class="desc-col">{{editor system.descMalus target="system.descMalus" owner=true editable=false}}</div>
            </div>
        </div>
    {{/each}}
</div>