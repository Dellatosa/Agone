<div class="ligne-arme titre">
    <label></label>
    <label>{{localize "agone.common.name"}}</label>
    <label>{{localize "agone.items.equipee"}}</label>
    <label>{{localize "agone.items.style"}}</label>
    <label>{{localize "agone.items.modifInit"}}</label>
    <label>{{localize "agone.items.modifAttaque"}}</label>
    <label>{{localize "agone.items.modifParade"}}</label>
    <label>{{localize "agone.items.modifDommages"}}</label>
    <label>{{localize "agone.items.portee"}}</label>
    <label>{{localize "agone.actors.competence"}}</label>
    <label>{{localize "agone.common.type"}}</label>
    <label>{{localize "agone.items.minForce"}}</label>
    <label>{{localize "agone.items.minAgilite"}}</label>
    <label>{{localize "agone.items.tai"}}</label>
    <label></label>
    <a class="creer-item" data-type="Arme" title="{{localize 'agone.common.ajouter'}}"><i class="fas fa-plus"></i></a>
</div>
{{#each armes as |arme id|}}
<div class="ligne-arme item" data-item-id="{{arme._id}}">
    <a class="item-roll"><img src="{{img}}" title="{{localize 'agone.actors.voirArme'}}" height="32" width="32"/></a>
    <div>{{name}}</div>
    <div>
        <select class="inline-edit" data-field="data.equipee">
            {{#select system.equipee}}
                <option value=""></option>
                {{#if (eq system.style "melee") }}
                    {{#if (eq system.diffTai -1)}}
                        <option value="1main">1 m.</option>
                    {{/if}}
                    {{#if (eq system.diffTai 0)}}
                        <option value="1main">1 m.</option>
                        <option value="2mains">2 m.</option>
                    {{/if}}
                    {{#if (eq system.diffTai 1)}}
                        <option value="2mains">2 m.</option>
                    {{/if}}
                {{/if}}
                {{#if (eq system.style "trait") }}
                    <option value="2mains">2 m.</option>
                {{/if}}
                {{#if (eq system.style "jet") }}
                    <option value="1main">1 m.</option>
                {{/if}}
                {{#if (eq system.style "bouclier") }}
                    <option value="secMain">2em m.</option>
                {{/if}}
            {{/select}}
        </select>
    </div>
    <div>{{configLocalize "stylesArme" data.style}}</div>
    <div>{{system.modifInit}}</div>
    <div>{{system.modifAttaque}}</div>
    <div>{{system.modifParade}}</div>
    <div>{{system.modifDommages}}</div>
    <div>{{system.portee}}</div>
    <div>
        <select class="inline-edit" data-field="system.competence">
            {{#select system.competence}}
                <option value=""></option>
                {{#each ../actor.system.familleCompetences.epreuves.competences.armes.domaines as |domaine keyDom|}}
                    {{#if domaine.label}}
                        <option value="{{keyDom}}">{{localize domaine.label}}</option>
                    {{/if}}
                {{/each}}
            {{/select}}
        </select>
    </div>
    <div>{{configLocalize "typesArme" system.type}}</div>
    <div>{{#malusFOR system.minForce system.style system.equipee ../actor.system.aspects.corps.caracteristiques.force.valeur }}<span class="warn">{{system.minForce}}</span>{{else}}<span>{{system.minForce}}</span>{{/malusFOR}}</div>
    <div>{{#malusAGI system.minAgilite system.style system.equipee ../actor.system.aspects.corps.caracteristiques.agilite.valeur }}<span class="warn">{{system.minAgilite}}</span>{{else}}<span>{{system.minAgilite}}</span>{{/malusAGI}}</div>
    <div>{{#if system.nonUtilisable }}<span class="warn">{{system.tai}}</span>{{else}}<span>{{system.tai}}</span>{{/if}}</div>
    <a class="editer-item" title="{{localize 'agone.common.editer'}}"><i class="fas fa-edit"></i></a>
    <a class="supprimer-item" title="{{localize 'agone.common.supprimer'}}"><i class="fas fa-trash"></i></a>
</div>            
{{/each}}
