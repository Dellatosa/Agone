<div class="ligne-pouvoir-saisonnin titre">
    <label></label>
    <label>{{localize "agone.common.name"}}</label>
    <label>{{localize "agone.actors.saisonnin"}}</label>
    <label>{{localize "agone.items.descEffet"}}</label>
    <label></label>
    <a class="creer-item" data-type="PouvoirSaison" title="{{localize 'agone.common.ajouter'}}"><i class="fas fa-plus"></i></a>
</div>
{{#each pouvoirsSaison as |pouvoir id|}}
<div class="ligne-pouvoir-saisonnin item" data-item-id="{{pouvoir._id}}">
    <a class="item-roll"><img src="{{img}}" title="{{localize 'agone.actors.voirPouvoir'}}" height="32" width="32"/></a>
    <div>{{name}}</div>
    <div>{{configLocalize "saisonnins" system.saisonnin}}</div>
    <div>{{system.descEffet}}</div>
    <a class="editer-item" title="{{localize 'agone.common.editer'}}"><i class="fas fa-edit"></i></a>
    <a class="supprimer-item" title="{{localize 'agone.common.supprimer'}}"><i class="fas fa-trash"></i></a>
</div>            
{{/each}}