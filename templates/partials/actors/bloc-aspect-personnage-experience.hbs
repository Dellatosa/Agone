<!-- Blocs d'aspects (corps, esprit ame) avec bonus calculé et caractéristiques primaires associées à chaque aspect -->
{{#each data.system.aspects as |aspect keyAsp|}}
    <div class="aspect {{#if (eq keyAsp "corps")}}bd-left{{/if}} {{#if (eq keyAsp "ame")}}bd-right{{/if}}">
        <div class="aspect-titre">{{aspect.positif.label}}</div>
        <div class="aspect-line-expe">
            <label>{{aspect.positif.label}}</label>
            <div class="val-carac"><label>{{aspect.positif.valeur}}</label></div>
            <div class="aspect-expe minus">
                <a class="mod-aspect-expe" title="{{localize 'agone.tooltip.dimExpe'}}" data-aspect="{{keyAsp}}" data-action="minus">
                    <i class="fa-solid fa-circle-minus"></i>
                </a>
            </div>
            {{#if (eq aspect.positif.expAtt aspect.positif.coutExp)}}
                <div class="val-expe max"><label>{{aspect.positif.expAtt}}</label></div>
            {{else}}
                <div class="val-expe"><label>{{aspect.positif.expAtt}}</label></div>
            {{/if}}
            <div class="aspect-expe plus">
                <a class="mod-aspect-expe" title="{{localize 'agone.tooltip.augExpe'}}" data-aspect="{{keyAsp}}" data-action="plus">
                    <i class="fa-solid fa-circle-plus"></i>
                </a>
            </div>
        </div>
        <div class="bonus-line">
            <label>{{aspect.bonus.label}}</label>
            <div class="val-carac"><label>{{aspect.bonus.valeur}}</label></div>
        </div>
        <div class="carac-line-expe {{keyAsp}}">
            {{#each aspect.caracteristiques as |carac keyCarac|}}
                {{#unless carac.secondaire}}
                <label>{{carac.label}}</label>
                <div class="val-carac">
                    <label>
                        {{carac.valeur}}
                        {{#if carac.peupleMin}} <i class="fa-solid fa-circle-up" title="{{localize 'agone.tooltip.minPeuple'}}"></i>{{/if}}
                        {{#if carac.peupleMax}} <i class="fa-solid fa-circle-down" title="{{localize 'agone.tooltip.maxPeuple'}}"></i>{{/if}}
                    </label>
                </div>
                <div class="carac-expe minus">
                    <a class="mod-carac-expe" title="{{localize 'agone.tooltip.dimCarac'}}" data-aspect="{{keyAsp}}" data-carac="{{keyCarac}}" data-action="minus">
                        <i class="fa-solid fa-circle-minus"></i>
                    </a>
                </div>
                {{#if (eq carac.expAtt carac.coutExp)}}
                    <div class="val-expe max"><label>{{carac.expAtt}}</label></div>
                {{else}}
                    <div class="val-expe"><label>{{carac.expAtt}}</label></div>
                {{/if}}
                <div class="carac-expe plus">
                    <a class="mod-carac-expe" title="{{localize 'agone.tooltip.augCarac'}}" data-aspect="{{keyAsp}}" data-carac="{{keyCarac}}" data-action="plus">
                        <i class="fa-solid fa-circle-plus"></i>
                    </a>
                </div>
                {{/unless}}
            {{/each}}
        </div>
    </div>
{{/each}}