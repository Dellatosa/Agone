<div class="ligne-botteSecrete titre">
    <label></label>
    <label>{{localize "agone.common.name"}}</label>
    <label>{{localize "agone.items.ecoleLabel"}}</label>
    <label>{{localize "agone.items.rarete"}}</label>
    <label></label>
    <a class="creer-item" data-type="BotteSecrete" title="{{localize 'agone.common.ajouter'}}"><i class="fas fa-plus"></i></a>
</div>
{{#each bottesSecretes as |botteSecrete id|}}
<div class="ligne-botteSecrete item" data-item-id="{{botteSecrete._id}}">
    <a class="editer-item"><img src="{{img}}" title="{{localize 'agone.common.editer'}}" height="32" width="32"/></a>
    <div>{{name}}</div>
    <div>{{system.ecole}}</div>
    <div>{{system.rarete}}</div>
    <a class="editer-item" title="{{localize 'agone.common.editer'}}"><i class="fas fa-edit"></i></a>
    <a class="supprimer-item" title="{{localize 'agone.common.supprimer'}}"><i class="fas fa-trash"></i></a>
</div>            
{{/each}}