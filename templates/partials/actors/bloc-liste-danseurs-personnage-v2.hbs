<div class="titre-rub">{{localize "agone.actors.danseurs"}}</div>
<div class="grid-danseurs">
    {{#each danseurs as |danseur id|}}
        <div class="bloc-danseur item" data-item-id="{{danseur._id}}">
            <div class="ligne-titre">
                <a class="item-roll"><img src="{{img}}" title="{{localize 'agone.actors.voirDanseur'}}"/></a>
                <div class="titre">{{name}}</div>
                {{#if ../unlocked}}
                    <div class="icone"><a class="editer-item" title="{{localize 'agone.common.editer'}}"><i class="fa-duotone fa-solid fa-pen-to-square"></i></a></div>
                    <div class="icone"><a class="supprimer-item" title="{{localize 'agone.common.supprimer'}}"><i class="fa-duotone fa-solid fa-x"></i></a></div>
                {{else}}
                    {{#if (eq system.endurance.value 0)}}
                        <div class="icone warn"><i class="fa-duotone fa-solid fa-heart-circle-bolt" title="{{name}} {{localize 'agone.notifications.warnDanseurEpuise'}}"></i></div>
                    {{/if}}
                {{/if}}
            </div>
            <div class="ligne-stats-danseur">
                <div>
                    <div><i class="fa-duotone fa-solid fa-sparkles" title="{{localize 'agone.tooltip.bonusEmprise'}}"></i> {{system.bonusEmprise}}</div>
                    <div><i class="fa-duotone fa-solid fa-hands-holding-heart" title="{{localize 'agone.tooltip.empathie'}}"></i> {{system.empathie}}</div>
                </div>
                <div><i class="fa-duotone fa-solid fa-heart-circle-bolt" title="{{localize 'agone.tooltip.endurance'}}"></i> {{system.endurance.value}} / {{system.endurance.max}}</div>
                <div><i class="fa-duotone fa-solid fa-wreath-laurel" title="{{localize 'agone.tooltip.experience'}}"></i> {{system.experience}}</div>
            </div>
            <div class="ligne-sorts-connus">
                <div class="titre">{{localize "agone.actors.sortsConnus"}}</div>
                <div class="info"><i class="fa-duotone fa-solid fa-head-side-brain" title="{{localize 'agone.tooltip.memoire'}}"></i> {{system.memoire.value}} / {{system.memoire.max}}</div>
            </div>
            {{#each system.sortsConnus as |id|}}
                <div class="ligne-sort"><i class="{{symboleResonance ../../sorts id}}"></i> {{nomSort ../../sorts id}}</div>
            {{/each}}
        </div>
    {{/each}}
</div>