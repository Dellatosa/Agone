<div class="ligne-connivence titre">
    <label></label>
    <label>{{localize "agone.common.name"}}</label>
    <label>{{localize "agone.items.cercleDemon"}}</label>
    <label>{{localize "agone.items.nomDemon"}}</label>
    <label>{{localize "agone.items.nomAdvocatus"}}</label>
    <label></label>
    <a class="creer-item" data-type="Connivence" title="{{localize 'agone.common.ajouter'}}"><i class="fas fa-plus"></i></a>
</div>
{{#each connivences as |connivence id|}}
<div class="ligne-connivence item" data-item-id="{{connivence._id}}">
    <a class="editer-item"><img src="{{img}}" title="{{localize 'agone.common.editer'}}" height="32" width="32"/></a>
    <div>{{name}}</div>
    <div>{{configLocalize "cerclesDemon" system.cercleDemon}}</div>
    <div>{{system.nomDemon}}</div>
    <div>{{system.nomAdvocatus}}</div>
    <a class="editer-item" title="{{localize 'agone.common.editer'}}"><i class="fas fa-edit"></i></a>
    <a class="supprimer-item" title="{{localize 'agone.common.supprimer'}}"><i class="fas fa-trash"></i></a>
</div>            
{{/each}}
