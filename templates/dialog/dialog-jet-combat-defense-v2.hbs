<form>
    {{#if (eq defenseurData.typeDefense "parade")}}
        <div class="titre">
            {{#if armeData.equipee}}<i class="fa-solid fa-hand-fist {{#if (eq armeData.equipee "mainSec")}}red{{/if}} icone"></i>{{/if}} {{armeData.nomArme}}
        </div>
        <div class="grid-entete">
            <div class="lib-ent">{{ localize "agone.actors.jetParade"}}</div>
            <div class="lib-ent">{{ localize "agone.dialog.potentiel"}} <i class="fa-duotone fa-solid fa-shield-halved"></i> {{defenseurData.potDefense}}</div>
        </div>
    {{/if}}
    {{#if (eq defenseurData.typeDefense "esquive")}} 
        <div class="titre">
            <i class="fa-duotone fa-solid fa-person-running-fast icone"></i> {{ localize "agone.dialog.esquive"}}
        </div>
        <div class="grid-entete">
            <div class="lib-ent-all">{{ localize "agone.dialog.potentiel"}} <i class="fa-duotone fa-solid fa-shield-halved"></i> {{defenseurData.potDefense}}</div>
        </div>
    {{/if}}
    {{#if (eq defenseurData.typeDefense "defenseNat")}}
        <div class="titre">
            <i class="fa-duotone fa-solid fa-shield-slash icone"></i> {{ localize "agone.dialog.defenseNat"}}
        </div>
        <div class="grid-entete">
            <div class="lib-ent-all">{{ localize "agone.dialog.potentiel"}} <i class="fa-duotone fa-solid fa-shield-halved"></i> {{defenseurData.potDefense}}</div>
        </div>
    {{/if}}
    {{#if defenseurData.specialisation}}
        <div class="form-group">
            <div><i class="fa-duotone fa-solid fa-award"></i> {{ localize "agone.actors.specialisation"}}  <span class="bold">{{defenseurData.labelSpecialisation}} (+1)</span></div>
            <input type="checkbox" name="utiliseSpecialisation"/>
        </div>
    {{/if}}
    <div class="form-group">
        <label>{{ localize "agone.chat.utiliseHeroisme"}}</label>
        <input type="checkbox" name="utiliseHeroisme"/>
    </div>
    {{#if (eq defenseurData.typeDefense "esquive")}}
        <div class="form-group">
            <label>{{ localize "agone.chat.defenseurEnSelle"}}</label>
            <input type="checkbox" name="defenseurEnSelle"/>
        </div>
    {{/if}}
    {{#if (eq defenseurData.typeDefense "parade")}}
        <div class="form-group">
            <label>{{ localize "agone.chat.mauvaiseMain"}}</label>
            <input type="checkbox" name="mauvaiseMain"/>
        </div>
        <div class="form-group">
            <label>{{ localize "agone.chat.armeNonPreteDist"}}</label>
            <input type="checkbox" name="armeNonPreteDist"/>
        </div>
        <div class="form-group">
            <label>{{ localize "agone.chat.attParMemeArme"}}</label>
            <input type="checkbox" name="attParMemeArme"/>
        </div>
    {{/if}}
    <div class="form-group">
        <label>{{ localize "agone.chat.defenseurAuSol"}}</label>
        <input type="checkbox" name="defenseurAuSol"/>
    </div>
    <div class="form-group">
        <label>{{ localize "agone.chat.attaqueCote"}}</label>
        <input type="checkbox" name="attaqueCote"/>
    </div>
    <div class="form-group">
        <label>{{ localize "agone.chat.attaqueDos"}}</label>
        <input type="checkbox" name="attaqueDos"/>
    </div>
    <div class="form-group">
        <label>{{ localize "agone.chat.defenseurSureleve"}}</label>
        <input type="checkbox" name="defenseurSureleve"/>
    </div>
</form>