<div class="carte ctr-magie" data-owner-id="{{owner}}">
    <div class="titre">
        <!-- <img src="{{img}}" title="{{name}}" height="32" width="32"/> -->
        <div class="titre-nom">{{localize "agone.actors.contreMagie"}}</div>
    </div>
    <div class="grid-2-chk">
        <label class="entete">{{ localize "agone.chat.utiliseHeroisme"}}</label>
        <input class="util-hero" type="checkbox" name="utiliseHeroisme"/>
    </div>
    <div>{{localize "agone.chat.contreMagieSelDanseur"}}</div>
     <div class="boutons-carte">
        {{#each danseurs as | danseur | }}
            <div class="ligne-btn-sort danseur" data-danseur-id="{{danseur.id}}">
                <a class="editer-item-ctr-magie" title="{{localize "agone.common.details"}}"><i class="fas fa-book-open"></i></a>
                <button class="jet-contre-magie">{{danseur.name}} ({{danseur.system.bonusEmprise}})</button> <!-- <i class="fas fa-hand-sparkles"></i> -->
            </div>
        {{/each}}
    </div>
</div>